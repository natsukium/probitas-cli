{
  "name": "@probitas/cli",
  "lint": {
    "rules": {
      "exclude": ["no-import-prefix"]
    }
  },
  "version": "0.0.0",
  "exports": "./mod.ts",
  "publish": {
    "include": [
      "LICENSE",
      "README.md",
      "assets/**/*",
      "deno.json",
      "deno.lock",
      "mod.ts",
      "src/**/*.ts"
    ]
  },
  "tasks": {
    "check": "deno check --doc && deno check --doc-only **/*.md",
    "test": "deno test -A --parallel --shuffle",
    "test:coverage": "deno task test --coverage=.coverage",
    "coverage": "deno coverage .coverage --include='src/'",
    "verify": "deno fmt && deno lint && deno task check && deno task test",
    "probitas": "deno run -A --unstable-kv --lock ./deno.lock ./mod.ts",
    "update-version": "deno run -A .scripts/update_version.ts"
  },
  "imports": {
    "@core/errorutil": "jsr:@core/errorutil@^1.2.1",
    "@core/unknownutil": "jsr:@core/unknownutil@^4.3.0",
    "@cspotcode/outdent": "jsr:@cspotcode/outdent@^0.8.0",
    "@lambdalisue/sandbox": "jsr:@lambdalisue/sandbox@^3.0.1",
    "@probitas/core": "jsr:@probitas/core@^0",
    "@probitas/discover": "jsr:@probitas/discover@^0",
    "@probitas/logger": "jsr:@probitas/logger@^0",
    "@probitas/probitas": "jsr:@probitas/probitas@^0",
    "@probitas/reporter": "jsr:@probitas/reporter@^0",
    "@probitas/runner": "jsr:@probitas/runner@^0",
    "@std/assert": "jsr:@std/assert@^1.0.16",
    "@std/cli": "jsr:@std/cli@^1.0.24",
    "@std/collections": "jsr:@std/collections@^1.1.3",
    "@std/fs": "jsr:@std/fs@^1.0.20",
    "@std/jsonc": "jsr:@std/jsonc@^1.0.2",
    "@std/path": "jsr:@std/path@^1.1.3",
    "@std/testing": "jsr:@std/testing@^1.0.16"
  }
}
